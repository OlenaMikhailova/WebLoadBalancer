@model IEnumerable<WebLoadBalancer.Models.web_user>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>user_id</th>
            <th>email</th>
            <th>Username</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.user_id</td>
                <td>@user.email</td>
                <td>@user.username</td>
            </tr>
        }
    </tbody>
</table>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.user_password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user_password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.user_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.user_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.user_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
